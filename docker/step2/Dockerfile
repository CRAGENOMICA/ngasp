# ==============================================================================
# STEP 2 DOCKERFILE
# ==============================================================================
# 
# Usage:
#
#   - Build : docker build -t step2 .
#   - Run   : docker run -ti --rm step2 /bin/bash
#

# ==============================================================================
# BASE IMAGE
# ==============================================================================

FROM step1

# ==============================================================================
# NODE JS SERVER
# ==============================================================================

# ************
# *** epel ***
# ************

RUN curl -o epel.rpm https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -LOk && \
    rpm -Uvh epel.rpm

# **************
# *** nodejs ***
# **************

RUN yum install -y nodejs

# ==============================================================================
# START
# ==============================================================================

WORKDIR /app


